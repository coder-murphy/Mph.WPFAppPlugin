<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewmodel="clr-namespace:Mph.WPFAppPlugin.ViewModel">
    <DataTemplate x:Key="PluginWindowSideMenuItemTemplate" DataType="{x:Type viewmodel:SideMenuItemViewModel}">
        <Grid
            MinWidth="80"
            MinHeight="40"
            Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Image
                Grid.Row="0"
                Width="24"
                Height="24"
                Margin="4,4,16,4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Source="{Binding Icon}" />

            <TextBlock
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="{Binding Header}"
                TextAlignment="Center"
                TextWrapping="Wrap" />
        </Grid>
    </DataTemplate>

    <Style x:Key="PluginWindowSideMenuStyle" TargetType="{x:Type ListBox}">
        <Setter Property="ItemTemplate" Value="{StaticResource PluginWindowSideMenuItemTemplate}" />
    </Style>

    <Style x:Key="PluginWindowBannerStyle" TargetType="{x:Type ListView}">
        <Setter Property="BorderBrush" Value="Transparent" />
    </Style>
</ResourceDictionary>